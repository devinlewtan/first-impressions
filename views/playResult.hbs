{{#each question}}

<div class="singleQuestion" onload="handleVote()">
    <img src="{{../image}}" height="180" width="250"><br>
    <h2>{{this.question}}</h2>
    {{#each this.answers}}
    {{#if ../../correct}}
    <h3><strong style="color: green">{{this.value}}</strong> - guessed {{this.timesVoted}} / {{../../totalVotes}}
        times
    </h3>
    {{else}}
    <h3><strong style="color: red">{{this.value}}</strong> - guessed {{this.timesVoted}} / {{../../totalVotes}}
        times
    </h3>
    {{/if}}
    {{/each}}
    <a class="button" href="/">next question</a>

</div>
{{/each}}
</div>

